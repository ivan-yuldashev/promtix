{
  "name": "promtix-monorepo",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa",
  "license": "GNU AGPL v3.0",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:backend": "pnpm --filter @promtix/backend dev",
    "dev:frontend": "pnpm --filter @promtix/frontend dev",
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "db:push": "pnpm --filter @promtix/backend db:push",
    "db:studio": "pnpm --filter @promtix/backend db:studio",
    "db:generate": "pnpm --filter @promtix/backend db:generate",
    "prepare": "husky",
    "clean": "pnpm -r run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": "eslint --fix --no-warn-ignored"
  }
}
